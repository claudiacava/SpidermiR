citHeader("To cite SpidermiR in publications use:")

citEntry(entry = "article",
         title        = "SpidermiR: An R/Bioconductor Package for
Integrative Analysis with miRNA Data.",
         author       = personList(as.person("Claudia Cava"),
                                   as.person("Antonio Colaprico"),
                                   as.person("Gloria Bertoli"),
                                   as.person("Alex Graudenzi"),
								   as.person("Tiago C. Silva"),
								   as.person("Catharina Olsen"),
								   as.person("Houtan Noushmehr"),
                                   as.person("Gianluca Bontempi"),
                                   as.person("Giancarlo Mauri"),
                                   as.person("Isabella Castiglioni")
         ),
         journal = "Int J Mol Sci",
         year         = "2017",
		 volume = 18,
		 number= 2, 
         textVersion  =
             paste("Claudia Cava, Antonio Colaprico,Gloria Bertoli ,",
                   "Alex Graudenzi, Tiago C. Silva, Catharina Olsen,Houtan Noushmehr, Gianluca Bontempi, Giancarlo Mauri,",
                   "Isabella Castiglioni (2017).",
                   "SpidermiR: An R/Bioconductor Package for
Integrative Analysis with miRNA Data. Int J Mol Sci. 2017 Jan 27;18(2).")
)

